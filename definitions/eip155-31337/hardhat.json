{
  "$schema": "./node_modules/chainfile/schema.json",
  "id": "eip155:31337/hardhat:2.19.4",
  "caip2": "eip155:31337",
  "name": "Hardhat",
  "containers": {
    "hardhat": {
      "image": "ghcr.io/fuxingloh/hardhat-container:2.22.1",
      "source": "https://github.com/fuxingloh/hardhat-container",
      "resources": {
        "cpu": 0.25,
        "memory": 256
      },
      "endpoints": {
        "rpc": {
          "port": 8545,
          "protocol": "HTTP JSON-RPC 2.0",
          "probes": {
            "readiness": {
              "params": [],
              "method": "eth_blockNumber",
              "match": {
                "result": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
