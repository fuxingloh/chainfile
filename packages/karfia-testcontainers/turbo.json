{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "test": {
      "inputs": ["tsconfig.json", "./**/*.ts", "./**/*.test.ts"],
      "dependsOn": ["karfia-agent#build:docker", "^build"]
    },
    "build": {
      "inputs": ["tsconfig.json", "tsconfig.build.json", "./**/*.ts"],
      "outputs": ["./**/*.js", "./**/*.d.ts", "./**/*.d.ts.map"],
      "dependsOn": ["karfia-agent#build:docker", "^build"]
    }
  }
}
