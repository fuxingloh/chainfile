{
  "name": "chainfile",
  "version": "0.0.0",
  "private": false,
  "description": "Chainfile defines the instructions on how to package complex blockchain nodes into a Container that can be easily deployed and managed on Container-capable platforms such as Kubernetes, Compose, and ECS.",
  "repository": {
    "url": "git+https://github.com/vetumorg/chainfile"
  },
  "license": "MPL-2.0",
  "files": [
    "schema.json",
    "**/*.d.ts",
    "**/*.d.ts.map",
    "**/*.js"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -f index.d.ts && tsc --build --clean",
    "generate": "json2ts schema.json > type.ts",
    "lint": "eslint .",
    "test": "jest"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "@workspace/jest-preset"
  },
  "dependencies": {
    "ajv": "^8.14.0",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "json-schema-to-typescript": "^14.0.4"
  }
}
