{
  "$schema": "../node_modules/@chainfile/schema/schema.json",
  "caip2": "eip155:1337",
  "name": "Ganache",
  "values": {
    "version": "v7.9.2"
  },
  "containers": {
    "ganache": {
      "image": "docker.io/trufflesuite/ganache",
      "tag": {
        "$value": "version"
      },
      "source": "https://github.com/trufflesuite/ganache",
      "resources": {
        "cpu": 0.25,
        "memory": 256
      },
      "endpoints": {
        "rpc": {
          "port": 8545,
          "protocol": "HTTP JSON-RPC 2.0",
          "probes": {
            "readiness": {
              "params": [],
              "method": "eth_blockNumber",
              "match": {
                "result": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
